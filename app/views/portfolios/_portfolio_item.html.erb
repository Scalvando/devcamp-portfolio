<div class="col-md-4">
  <div class="card mb-4 box-shadow">
    <div class="card-header">
      <%= link_to portfolio_item.title, portfolio_show_path(portfolio_item.id) %>
    </div>
    <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil?%>
    <div class="card-body">
      <h5 class="card-title">
        <%# <%= link_to portfolio_item.title, portfolio_show_path(portfolio_item.id) %>
        <span class="badge badge-secondary"><%= portfolio_item.subtitle %></span>
      </h5>
      <p class="card-text">
        <%= portfolio_item.body %>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to "View", portfolio_show_path(portfolio_item.id), class: "btn btn-sm btn-outline-primary" %>
          <% if logged_in?(:site_admin) %>
          <%= link_to "Edit", edit_portfolio_path(portfolio_item.id), class: "btn btn-sm btn-outline-secondary" %>
          <%# <%= link_to 'Delete Portfolio Item', portfolio_path(portfolio_item), 
                method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin), 
                class: "btn btn-sm btn-outline-danger" %>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>